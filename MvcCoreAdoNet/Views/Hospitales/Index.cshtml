@model List<Hospital>

<h1 class="text-primary">Hospitales INDEX</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Teléfono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hospital hospital in Model)
        {
            <tr>
                <td>@hospital.Nombre</td>
                <td>@hospital.Direccion</td>
                <td>@hospital.Telefono</td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = hospital.IdHospital }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
